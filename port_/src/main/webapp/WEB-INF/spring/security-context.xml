<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<security:http>
	<security:intercept-url pattern="/admin/*"
	access="hasAnyRole('ROLE_AD', 'ROLE_A')"/>
	
	
	<security:access-denied-handler error-page="/accessError"/>
	
	<!-- security:form-login -->
	<security:form-login/>
</security:http>
<security:authentication-manager>
	<security:authentication-provider>
	<security:user-service>
		<security:user name="member" password="{noop}member" authorities="ROLE_AD"/>
		<security:user name="admin" password="{noop}admin" authorities="ROLE_A"/>
		<security:user name="cus" password="{noop}cus" authorities="ROLE_C"/>
	</security:user-service>
		
	</security:authentication-provider>
</security:authentication-manager>

</beans>
